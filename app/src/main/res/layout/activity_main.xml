<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.matthias.guizic.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    android:layout_marginHorizontal="@dimen/button_margin">


    <Button
        android:id="@+id/button_list_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_selector"
        android:onClick="onClickListActivity"
        android:text="Zones"
        tools:layout_editor_absoluteX="8dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/button_list_activity2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_selector"
        android:onClick="onClickResetDatabase"
        android:text="Reset database"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="48dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/button_list_activity3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin"
        android:background="@drawable/button_selector"
        android:onClick="onClickAddZone"
        android:text="Ajout zone"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="96dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/button_add_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_selector"
        android:onClick="onClickAddSound"
        android:text="@string/button_main_add_sound"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="144dp"
        android:textColor="#FFFFFF"/>

</LinearLayout>
