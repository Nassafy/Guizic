<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.matthias.guizic.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    android:layout_marginHorizontal="@dimen/button_margin"
    android:layout_marginTop="@dimen/button_margin">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_page_text"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36sp" />

    <Button
        android:id="@+id/button_list_activity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_page_button_size"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_selector"
        android:onClick="onClickListActivity"
        android:text="@string/parcoursListButton"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/button_list_activity3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_page_button_size"
        android:layout_marginTop="@dimen/button_margin"
        android:background="@drawable/button_selector"
        android:onClick="onClickAddZone"
        android:text="@string/addZoneButton"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="96dp" />

    <Button
        android:id="@+id/button_add_sound"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_page_button_size"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_selector"
        android:onClick="onClickAddSound"
        android:text="@string/button_main_add_sound"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="144dp" />

    <Button
        android:id="@+id/button_list_activity2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_page_button_size"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_selector"
        android:onClick="onClickResetDatabase"
        android:text="Reset database"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="48dp" />

</LinearLayout>
